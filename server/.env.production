# CONFIGURAÇÕES ESSENCIAIS DO TOIT NEXUS
# Variáveis configuradas no Railway - Apenas as necessárias

# ====================================================================
# ESSENCIAIS PARA FUNCIONAMENTO
# ====================================================================

# Banco de dados PostgreSQL
DATABASE_URL=${DATABASE_URL}

# Autenticação JWT
JWT_SECRET=${JWT_SECRET}
SESSION_SECRET=${SESSION_SECRET}

# Servidor
PORT=${PORT}
NODE_ENV=${NODE_ENV}

# ====================================================================
# URLs E CORS
# ====================================================================

# API Base URL
API_URL=${API_URL}

# CORS Origins
CORS_ORIGIN=https://toit.com.br,https://admin.toit.com.br,https://api.toit.com.br

# ====================================================================
# SERVIÇOS EXTERNOS
# ====================================================================

# Email (SendGrid)
SENDGRID_API_KEY=${SENDGRID_API_KEY}

# Redis Cache
REDIS_URL=${REDIS_URL}

# Stripe (Pagamentos)
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# ====================================================================
# SISTEMA QUANTUM/ML
# ====================================================================

# Quantum Algorithms
QUANTUM_ALGORITHMS_ENABLED=${QUANTUM_ALGORITHMS_ENABLED}
IBM_SECRET=${IBM_SECRET}

# ML System
ML_CREDITS_ENABLED=${ML_CREDITS_ENABLED}
ML_DEFAULT_PLAN=${ML_DEFAULT_PLAN}
ML_QUANTUM_OPTIMIZATION=${ML_QUANTUM_OPTIMIZATION}

# ====================================================================
# CONFIGURAÇÕES OPCIONAIS
# ====================================================================

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Log
LOG_LEVEL=info
