# CONFIGURAÇÕES DO TOIT NEXUS SERVER
# Ambiente de desenvolvimento

# Banco de dados PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/toit_nexus

# JWT Secret para autenticação
JWT_SECRET=toit_nexus_super_secret_key_2025_quantum_system

# Configurações do servidor
PORT=8080
NODE_ENV=development

# URLs do frontend
FRONTEND_URL=http://localhost:5173
ADMIN_URL=http://localhost:5174

# Configurações de CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,https://nexus.toit.com.br,https://supnexus.toit.com.br

# Configurações de email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Configurações de upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Configurações de sessão
SESSION_SECRET=toit_session_secret_key_2025

# Configurações de rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Configurações de log
LOG_LEVEL=info
LOG_FILE=logs/toit-nexus.log
