{
  "name": "toit-nexus-server",
  "version": "2.0.0",
  "description": "TOIT Nexus - Sistema de Gestão Empresarial Completo",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset.js",
    "build": "echo 'Server build complete'",
    "health": "curl -f https://api.toit.com.br/health || exit 1",
    "production": "NODE_ENV=production node server.js",
    "quantum:activate": "chmod +x ../activate-quantum-system.sh && ../activate-quantum-system.sh",
    "quantum:status": "python3 ../quantum_status.py",
    "quantum:test": "node ../test_quantum_apis.js"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "jwt",
    "multi-tenant",
    "api",
    "rest",
    "toit",
    "nexus"
  ],
  "author": {
    "name": "Victor Calife",
    "email": "victor@toit.com.br",
    "company": "TOIT - Tecnologia e Inovação"
  },
  "license": "PROPRIETARY",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@sentry/cli": "^2.52.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/victorcalife/TOIT-Nexus.git"
  },
  "private": true
}
