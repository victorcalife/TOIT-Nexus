{
  "name": "toit-nexus",
  "version": "2.0.0",
  "description": "TOIT NEXUS - Sistema Enterprise Completo",
  "main": "start.js",
  "scripts": {
    "start": "node start.js",
    "build": "cd client && npm install && npm run build && cd ../server && npm install",
    "client:install": "cd client && npm install",
    "client:build": "cd client && npm run build",
    "client:dev": "cd client && npm run dev",
    "server:build": "echo 'Backend already compiled - using existing dist files'",
    "server:build-force": "echo 'Backend already compiled - using existing dist files'",
    "server:start": "cd server && node dist/index.js",
    "db:push": "npx drizzle-kit push --config=drizzle.config.js",
    "db:setup": "node scripts/setup-database.js",
    "deploy": "node deploy.js",
    "railway:start": "npm run server:build && npm run db:setup && node railway-frontend.js",
    "test:start": "node test-deployment.js",
    "server:dev": "cd server && npm run dev",
    "server:test": "cd server && npm run test:all",
    "test": "node server/tests/run-all-tests.js",
    "test:routes": "cd server && npx jest tests/routes.test.js --verbose",
    "test:quantum": "cd server && npx jest tests/quantum.test.js --verbose",
    "test:mila": "cd server && npx jest tests/mila.test.js --verbose",
    "test:database": "cd server && npx jest tests/database.test.js --verbose",
    "test:auth": "cd server && npx jest tests/auth.test.js --verbose",
    "test:performance": "cd server && npx jest tests/performance.test.js --verbose",
    "test:e2e": "cd server && npx jest tests/e2e.test.js --verbose",
    "test:watch": "cd server && npx jest --watch",
    "test:coverage": "cd server && npx jest --coverage",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\""
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "csv-parser": "^3.2.0",
    "csv-writer": "^1.6.0",
    "drizzle-kit": "^0.18.1",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.8.3",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.3.1",
    "imap": "^0.8.17",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.7.4",
    "multer": "^2.0.2",
    "nanoid": "^5.0.4",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "pdfkit": "^0.17.1",
    "pg": "^8.11.3",
    "socket.io": "^4.8.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "stripe": "^14.15.0",
    "ts-node": "^10.9.2",
    "twilio": "^4.19.0",
    "typescript": "^5.2.2",
    "xlsx": "^0.18.5"
  }
}
