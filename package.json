{
  "name": "toit-nexus-frontend",
  "version": "1.0.0",
  "description": "TOIT NEXUS - Sistema Enterprise Completo",
  "type": "module",
  "main": "railway-frontend.js",
  "scripts": {
    "start": "node railway-frontend.js",
    "start:old": "node railway-frontend.js.OLD",
    "build": "cd client && npm install && npm run build && cd ..",
    "client:install": "cd client && npm install",
    "client:build": "cd client && npm run build",
    "client:dev": "cd client && npm run dev",
    "server:build": "echo 'Backend already compiled - using existing dist files'",
    "server:build-force": "echo 'Backend already compiled - using existing dist files'",
    "server:start": "cd server && node dist/index.js",
    "db:push": "npx drizzle-kit push --config=drizzle.config.js",
    "db:setup": "node scripts/setup-database.js",
    "deploy": "node deploy.js",
    "railway:start": "npm run server:build && npm run db:setup && node railway-frontend.js",
    "test:start": "node test-deployment.js"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "bcrypt": "^5.1.1",
    "csv-parser": "^3.2.0",
    "drizzle-kit": "^0.18.1",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.8.3",
    "express": "^4.18.2",
    "imap": "^0.8.17",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.7.4",
    "multer": "^2.0.2",
    "nanoid": "^5.0.4",
    "node-cron": "^4.2.1",
    "pg": "^8.11.3",
    "stripe": "^14.15.0",
    "ts-node": "^10.9.2",
    "twilio": "^4.19.0",
    "typescript": "^5.2.2",
    "xlsx": "^0.18.5"
  }
}
