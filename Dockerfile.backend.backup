# Dockerfile para Backend TOIT Nexus
FROM node:18-alpine

WORKDIR /app

# Copiar package files
COPY package*.json ./
COPY tsconfig.json ./
COPY drizzle.config.ts ./

# Instalar dependências
RUN npm install

# Copiar código fonte
COPY server/ ./server/
COPY shared/ ./shared/

# Build do projeto
RUN npm run build

# Exposer porta
EXPOSE 3000

# Comando de start
CMD ["npm", "start"]