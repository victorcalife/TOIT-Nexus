{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "ES2020"
    ],
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "outDir": "./dist",
    "rootDir": "../",
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "sourceMap": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.js",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../vite.config.js",
    "vite.ts",
    "vite.js",
    "../client/**/*"
  ]
}