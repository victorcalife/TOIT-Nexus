# Configurações da Aplicação
VITE_APP_NAME="TOIT Nexus"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Sistema de Gestão Empresarial TOIT"

# URLs de produção Railway
VITE_API_URL=https://toit-nexus-backend-production.up.railway.app
VITE_BACKEND_URL=https://toit-nexus-backend-production.up.railway.app
VITE_FRONTEND_URL=https://toit-nexus-frontend-production.up.railway.app

# Configurações de Ambiente
NODE_ENV="production"

# Configurações de Upload
VITE_MAX_FILE_SIZE="50"
VITE_ALLOWED_FILE_TYPES="image/*,application/pdf,text/*"

# Configurações de UI
VITE_THEME_DEFAULT="light"
VITE_ENABLE_DARK_MODE="true"

# Configurações de Desenvolvimento
VITE_ENABLE_DEV_TOOLS="false"
VITE_ENABLE_LOGGING="true"

# Configurações de Tenant
VITE_DEFAULT_TENANT="toit"

# Configurações de Autenticação
VITE_ENABLE_REGISTRATION="false"
VITE_ENABLE_PASSWORD_RESET="true"
VITE_ENABLE_EMAIL_VERIFICATION="true"

# Configurações de Features
VITE_ENABLE_NOTIFICATIONS="true"
VITE_ENABLE_REAL_TIME="true"
VITE_ENABLE_ANALYTICS="true"